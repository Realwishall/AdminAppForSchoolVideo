<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page4">
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/rootLL"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:onClick="AddNotes"
                android:text="Add Notes"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </Button>

            <Button
                android:id="@+id/UPLOADNOTES"
                android:enabled="false"
                android:onClick="UploadNotes"
                android:text="Add Notes"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button

                android:onClick="AddAssign"
                android:text="Add Assign"
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/top1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </Button>

            <Button
                android:id="@+id/UPLOADASS"
                android:enabled="false"
                android:onClick="UploadAssign"
                android:text="Add Assign"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </Button>
        </LinearLayout>

        <Button
            android:onClick="AddYouVideo"
            android:text="Add Youtube Video"
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/top2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </Button>

        <EditText
            android:inputType="textPersonName"
            android:hint="VIDEO URL"
            android:id="@+id/ed1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </EditText>
        <EditText
            android:inputType="textPersonName"
            android:hint="VIDEO TEXT"
            android:id="@+id/ed11"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </EditText>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>